<Page x:Class="BookSzop.Views.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookSzop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Label Margin="10" Content="{Binding WelcomeMessage}" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Button Height="30" Margin="0" Padding="5" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding LogoutCommand}"
                    Background="Black" Foreground="White">
            Logout
        </Button>
    </Grid>
</Page>
